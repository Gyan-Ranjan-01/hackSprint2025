            <% } %>
        </div>

        <!-- Error Title -->
        <h1 class="error-title"><%= title || 'Oops! Something went wrong' %></h1>
        
        <!-- Error Code -->
        <% if (errorName) { %>
            <p class="error-code"><%= errorName %></p>
        <% } %>

        <!-- Error Message -->
        <div class="error-message">

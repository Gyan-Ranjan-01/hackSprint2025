            <p><%= errorMessage || 'An unexpected error occurred. Please try again later.' %></p>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="/" class="btn btn-primary">üè† Go to Homepage</a>
            <a href="javascript:history.back()" class="btn btn-secondary">‚Üê Go Back</a>
        </div>

        <!-- Stack Trace (Development Only) -->
        <% if (stack) { %>
            <div class="stack-trace">
                <details>
                    <summary>üêõ Technical Details (for developers)</summary>
                    <pre><%= stack %></pre>
                </details>
            </div>
        <% } %>

        <!-- Help Text -->
        <div class="help-text">
            <% if (errorName && errorName.includes('404')) { %>
                The page you're looking for doesn't exist.<br>
                Check the URL or return to the homepage.
            <% } else if (errorName && (errorName.includes('401') || errorName.includes('403'))) { %>
                You don't have permission to access this resource.<br>
                Please <a href="/login">log in</a> or contact support.
            <% } else { %>
                If this problem persists, please contact our support team.<br>
                We're here to help! üíô
            <% } %>
        </div>
    </div>
</body>
</html>